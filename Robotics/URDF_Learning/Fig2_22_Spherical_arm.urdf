<?xml version="1.0" encoding="UTF-8"?>
<robot name="spherical_arm">

<link name="base">
	<visual>
		<geometry>
			<box size="2 2 0.1" />
		</geometry>
		<origin rpy="0 0 0" xyz="0 0 -0.05" />
	</visual>
	<collision>
		<geometry>
			<box size="2 2 0.1" />
		</geometry>
		<origin rpy="0 0 0" xyz="0 0 -0.05" />
	</collision>
</link>

<link name="cylinder_1">
	<visual>
		<geometry>
			<cylinder radius="0.05" length=".3" />
		</geometry>
		<material name="white"/>
		<origin rpy="0 0 0" xyz="0 0 0" />
	</visual>
	<collision>
		<geometry>
			<cylinder radius="0.05" length=".3" />
		</geometry>
		<origin rpy="0 0 0" xyz="0 0 0" />
	</collision>
</link>

<link name="cylinder_1_arm">
	<visual>
		<geometry>
			<box size="0.03 0.03 0.2"/>
		</geometry>
		<origin rpy="0 0 0" xyz="0 0 0" />
	</visual>
	<collision>
		<geometry>
			<box size="0.03 0.03 0.2"/>
		</geometry>
		<origin rpy="0 0 0" xyz="0 0 0" />
	</collision>
</link>

<joint name="base_cylinder_1" type="revolute">
	<axis xyz="0 0 1"/>
	<parent link="base"/>
	<child link="cylinder_1" />
  	<origin xyz="0 0 0"/>
  	<limit lower="-1.57" upper="1.57" effort="10" velocity="3"/>
</joint>

<joint name="cylinder_1_with_arm" type="fixed">
	<parent link="cylinder_1"/>
	<child link="cylinder_1_arm" />
  	<origin xyz="0 0 .15"/>
  	<limit lower="-1.57" upper="1.57" effort="10" velocity="3"/>
</joint>


<link name="cylinder_2">
	<visual>
		<geometry>
			<cylinder radius="0.05" length=".3" />
		</geometry>
		<material name="white"/>
		<origin rpy="1.57 0 0" xyz="0 0 0" />
	</visual>
	<collision>
		<geometry>
			<cylinder radius="0.05" length=".3" />
		</geometry>
		<origin rpy="1.57 0 0" xyz="0 0 0" />
	</collision>
</link>


<link name="cylinder_2_arm">
	<visual>
		<geometry>
			<box size="0.03 0.03 0.2"/>
		</geometry>
		<origin rpy="1.57 0 0" xyz="0 0 0" />
	</visual>
	<collision>
		<geometry>
			<box size="0.03 0.03 0.2"/>
		</geometry>
		<origin rpy="1.57 0 0" xyz="0 0 0" />
	</collision>
</link>

<joint name="cylinder_1arm_cylinder_2" type="revolute">
	<axis xyz="0 1 0"/>
	<parent link="cylinder_1_arm"/>
	<child link="cylinder_2" />
  	<origin xyz="0 0 .15"/>
  	<limit lower="-1.57" upper="1.57" effort="10" velocity="3"/>
</joint>

<joint name="cylinder_2_with_arm" type="fixed">
	<parent link="cylinder_2"/>
	<child link="cylinder_2_arm" />
  	<origin xyz="0 .15 0"/>
  	<limit lower="-1.57" upper="1.57" effort="10" velocity="3"/>
</joint>


<link name="box_3">
	<visual>
		<geometry>
			<box size=".1 .1 .1" />
		</geometry>
		<material name="white"/>
		<origin rpy="0 0 0" xyz="0 0 0" />
	</visual>
	<collision>
		<geometry>
			<box size=".1 .1 .1" />
		</geometry>
		<origin rpy="0 0 0" xyz="0 0 0" />
	</collision>
</link>


<link name="box_3_arm">
	<visual>
		<geometry>
			<box size="0.03 0.03 0.3"/>
		</geometry>
		<origin rpy="0 0 0" xyz="0 0 0" />
	</visual>
	<collision>
		<geometry>
			<box size="0.03 0.03 0.3"/>
		</geometry>
		<origin rpy="0 0 0" xyz="0 0 0" />
	</collision>
</link>

<joint name="cylinder_2arm_box3" type="prismatic">
	<axis xyz="0 0 1"/>
	<parent link="cylinder_2_arm"/>
	<child link="box_3" />
  	<origin xyz="0 .15 0"/>
  	<limit lower="-1.57" upper="1.57" effort="10" velocity="3"/>
</joint>

<joint name="box_3_with_arm" type="fixed">
	<parent link="box_3"/>
	<child link="box_3_arm" />
  	<origin xyz="0 0 .15"/>
  	<limit lower="-1.57" upper="1.57" effort="10" velocity="3"/>
</joint>


<link name="end_effector">
	<visual>
		<geometry>
			<box size=".1 .1 .1" />
		</geometry>
		<material name="blue"/>
		<origin rpy="0 0 0" xyz="0 0 0" />
	</visual>
	<collision>
		<geometry>
			<box size=".1 .1 .1" />
		</geometry>
		<origin rpy="0 0 0" xyz="0 0 0" />
	</collision>
</link>

<joint name="box_3_arm_end_effector" type="fixed">
	<parent link="box_3_arm"/>
	<child link="end_effector" />
  	<origin xyz="0 0 .15"/>
  	<limit lower="-1.57" upper="1.57" effort="10" velocity="3"/>
</joint>


<!-- Material -->
<material name="white">
    <color rgba="1 1 1 1"/>
</material>
<material name="blue">
    <color rgba="0 0 0.9 1.0"/>
</material>

</robot>